@section js{
    <script>

        $('#InList').bootstrapTable({
            url: '/in/GetList',
            method: 'post',
            dataType: "json",

            classes: 'table',//边框
            undefinedText: '',//当数据为 undefined 时显示的字符
            pagination: true,//启动分页
            paginationLoop: true,
            pageNumber: 1,
            pageSize: 5,
            pageList: [1, 5, 10, 20],
            striped: true,
            showColumns: true,  //显示下拉框勾选要显示的列
            showRefresh: true,  //显示刷新按钮
            showToggle: true,//显示一行是否改成竖着
            showPaginationSwitch: true,//是否显示 下面的分页框
            search: true, //显示搜索框
            //toolbar操作
            toolbarAlign: 'left',//工具栏对齐方式
            buttonsAlign: 'right',//按钮对齐方式
            toolbar: '#toolbar',//指定工作栏
            //服务器端分页
            // queryParamsType: 'limit',//查询参数组织方式
            queryParamsType: "",
            queryParams: queryParams,//请求服务器时所传的参数
            sidePagination: 'server',//指定服务器端分页
            locale: 'zh-CN',//中文支持,
            detailView: true,
            toolbal: '#toolbar',
             onExpandRow: function (index, row, $detail) {
                    oTableInit.InitSubTable(index, row, $detail);
                },
                columns: [{
                    field: 'checkbox',
                    title: 'checkbox',
                    checkbox: true
                }, {
                    field: 'Id',
                    title: '序号'
                }, {
                    field: 'UserName',
                    title: '名称',
                    align: 'center',
                    sortable: true
                }, {
                    field: 'CreateTime',
                    title: '创立时间',
                    formatter:function(value,row,index)
                    {
                        var temp = eval('new ' + eval( value ).source);
                        return temp.getFullYear() + '-' + temp.getMonth()+ '-'+ temp.getDate();
                    }
                },
                {
                    field: 'TotalMoney',
                    title: '总金额',
                    align: 'center'
                },
                {
                    field: 'Head.Provider.Name',
                    title: '供应商',
                    align: 'center'
                }
            ]
            });
            function queryParams(params) {
                return {
                    pageSize: params.pageSize,
                    pageIndex: params.pageNumber
                }
            }
            $("#btn_delete").click(function () {
                var ids = $.map(
                    $('#InList').bootstrapTable('getSelections'),
                    function (row) {
                        return row.Id;
                    });
                //调用ajax，删除服务器端
                $.ajax({
                    type: "POST",
                    url: "/In/Delete",
                    data: {
                        ids: ids
                    },
                    dataType: 'JSON',
                    success: function (data) {
                        //显示删除成功
                        if (data.Code == 1) {
                            $('#InList').bootstrapTable('remove',
                                {
                                    field: 'Id',
                                    values: ids
                                });
                        } else {
                            alert("删除失败");
                        }
                    }
                });
            });
            $("#btn_add").click(function () {
                location.href = "/In/Add";
            });
    </script>
